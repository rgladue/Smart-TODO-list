<!DOCTYPE html>
<html lang="en">

<head>
  <title>Smart ToDo List</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <link rel="stylesheet" href="/styles/main.css" type="text/css" />
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
  <link href="https://fonts.googleapis.com/css2?family=Bungee&family=Lobster&family=Major+Mono+Display&family=Source+Sans+Pro:ital,wght@0,300;0,600;1,300&family=Wire+One&display=swap" rel="stylesheet">
  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js">
</script>
</head>

<body>
  <!-- The Modal -->
<div id="myModal" class="modal">

  <!-- Modal content -->
  <div class="modal-content">


  </div>

</div>
<!--navbar-->
<nav class="navbar">
  <p style="color: rgb(77, 77, 77); width: 140px;"><i class="fa-solid fa-user"></i> Hello, <%= user %> </p>
  <h1 id="title">Smart List</h1>
  <form class="logout" action="/logout" method="post">
    <input type="submit" value="Logout">
  </form>
</nav>

  <!--new todo list submission form-->
  <form class="input-form" method="POST" action="/">
    <p>New To-Do:</p>
    <br>
    <input type="text" name="text" class="text-field">
    <br>
    <input type="submit" id="add-btn" value="Add">
  </form>
  <!--main content with listing categories-->
  <div class="list-container">
    <div class="movie-container">
      <h3>---- <i class="fa-solid fa-film"></i> ----</h3>
      <h3>----MOVIES----</h3>
      <ul id="movies">
        <% for(let i = 0; i < listings.length; i++) { %>
          <% if(listings[i].description.includes('watch')) { %>
        <li class="list-item">
          <%= listings[i].description %>
          <i class="fa-solid fa-trash-can" class="delete"></i>
        </li>
        <% } %>
        <% } %>
      </ul>
    </div>
    <div class="book-container">
      <h3>---- <i class="fa-solid fa-book"></i> ----</h3>
      <h3>----BOOKS----</h3>
      <ul id="books">
        <% for(let i = 0; i < listings.length; i++) { %>
        <% if(listings[i].description.includes('read')) { %>
          <li class="list-item">
            <%= listings[i].description %>
            <i class="fa-solid fa-trash-can" class="delete"></i>
          </li>
          <% } %>
          <% } %>
      </ul>
    </div>
    <div class="food-container">
      <h3>---- <i class="fa-solid fa-utensils"></i> ----</h3>
      <h3>----FOOD----</h3>
      <ul id="food">
        <% for(let i = 0; i < listings.length; i++) { %>
          <% if(listings[i].description.includes('eat' || 'drink')) { %>
            <li class="list-item" draggable="true">
              <%= listings[i].description %>
              <i class="fa-solid fa-trash-can" class="delete"></i>
            </li>
            <% } %>
          <% } %>
      </ul>
    </div>
    <div class="shop-container">
      <h3>---- <i class="fa-solid fa-cart-shopping"></i> ----</h3>
      <h3>----SHOPPING----</h3>
      <ul id="shop">
        <% for(let i = 0; i < listings.length; i++) { %>
          <% if(listings[i].description.includes('buy')) { %>
            <li class="list-item">
              <%= listings[i].description %>
              <i class="fa-solid fa-trash-can" class="delete"></i>
            </li>
            <% } %>
          <% } %>
      </ul>
    </div>
  </div>
  <!--footer content -->
  <footer class="footer">
    <p>T.Dinh <i class="fa-brands fa-github" id="tiens-git"></i></p>
    <p id="copyright">Crafted by 2 Guys &copy;2022</p>
    <p>R.Gladue <i class="fa-brands fa-github" id="robs-git"></i> <i class="fa-brands fa-twitter" id="robs-twit"></i></p>
  </footer>
</body>

</html>
