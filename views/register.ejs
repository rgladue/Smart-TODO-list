  <title>Register</title>
</head>
<body class="register-pg">
  <div class="register-form">
    <h1 id="register-title">Register</h1>
    <form class="register" method="POST" action="/register">
      <label for="username"><i class="fa-solid fa-user"></i> Username</label>
      <input type="text" class="input-txt" name="username" placeholder="Enter your username">
      <br>
      <br>
      <label for="email"><i class="fa-solid fa-envelope"></i> Email</label>
      <input type="text" class="input-txt" name="email" placeholder="Example@example.ca">
      <br>
      <br>
      <label for="password"><i class="fa-solid fa-lock"></i> Password</label>
      <input type="password" class="input-txt" name="password" placeholder="**********">
      <br><br><br><br>
      <input type="submit" id="register-btn" name="submit" value="Register">
    </form>
    
  </div>
  <div class="login-link"><p>Already have an account? <a href="/login">Login!</a></p></div>
</body>
</html>